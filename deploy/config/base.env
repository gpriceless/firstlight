# =============================================================================
# Multiverse Dive - Base Configuration
# =============================================================================
# This file contains the base configuration for the Multiverse Dive platform.
# Override these values in environment-specific files (production.env, development.env).

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME=multiverse-dive
APP_ENV=production
APP_VERSION=0.1.0
LOG_LEVEL=INFO
LOG_FORMAT=json
DEBUG=false

# -----------------------------------------------------------------------------
# API Server Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_TIMEOUT_SECONDS=300
API_MAX_REQUEST_SIZE_MB=100
API_CORS_ORIGINS=*
API_RATE_LIMIT_PER_MINUTE=100

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://localhost:5432/multiverse_dive
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
CACHE_BACKEND=redis
CACHE_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1024
CACHE_KEY_PREFIX=mdive:

# -----------------------------------------------------------------------------
# Processing Configuration
# -----------------------------------------------------------------------------
MAX_CONCURRENT_JOBS=10
JOB_TIMEOUT_SECONDS=3600
TILE_SIZE=512
DEFAULT_PROFILE=workstation
MAX_MEMORY_GB=8

# -----------------------------------------------------------------------------
# Storage Configuration
# -----------------------------------------------------------------------------
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=/data/multiverse_dive
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=us-east-1
STORAGE_S3_ENDPOINT=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_DISTRIBUTED=true
ENABLE_GPU=false
ENABLE_ASYNC_PROCESSING=true
ENABLE_QUALITY_CHECKS=true
ENABLE_PROVENANCE_TRACKING=true
ENABLE_WEBHOOKS=true

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------
# STAC API endpoints (comma-separated)
STAC_ENDPOINTS=https://earth-search.aws.element84.com/v1

# Planetary Computer (optional)
PLANETARY_COMPUTER_API_KEY=

# Weather data sources
ERA5_API_KEY=
GFS_ENDPOINT=https://nomads.ncep.noaa.gov

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
# JWT settings (generate strong secrets for production)
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API key for service-to-service communication
API_KEY=

# -----------------------------------------------------------------------------
# Monitoring & Telemetry
# -----------------------------------------------------------------------------
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_TRACING=false
TRACING_ENDPOINT=
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
AGENT_HEARTBEAT_SECONDS=30
AGENT_MAX_RETRIES=3
AGENT_RETRY_DELAY_SECONDS=5
