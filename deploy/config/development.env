# =============================================================================
# Multiverse Dive - Development Configuration
# =============================================================================
# Development environment overrides. These settings are optimized for
# local development with debug features enabled and relaxed security.
#
# WARNING: Never use these settings in production!

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
LOG_LEVEL=DEBUG
LOG_FORMAT=text
DEBUG=true

# -----------------------------------------------------------------------------
# API Server Configuration (Development)
# -----------------------------------------------------------------------------
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=1
API_TIMEOUT_SECONDS=120
API_MAX_REQUEST_SIZE_MB=50
# Allow all origins in development
API_CORS_ORIGINS=*
# Disable rate limiting in development
API_RATE_LIMIT_PER_MINUTE=1000

# -----------------------------------------------------------------------------
# Database Configuration (Local SQLite/PostgreSQL)
# -----------------------------------------------------------------------------
# SQLite for simple local development
DATABASE_URL=sqlite:///./multiverse_dive_dev.db
# Or local PostgreSQL:
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/multiverse_dive_dev
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=true

# -----------------------------------------------------------------------------
# Cache Configuration (Local Redis or In-Memory)
# -----------------------------------------------------------------------------
CACHE_BACKEND=memory
# Or local Redis:
# CACHE_BACKEND=redis
# CACHE_URL=redis://localhost:6379/0
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=256

# -----------------------------------------------------------------------------
# Processing Configuration (Development - Lower Resources)
# -----------------------------------------------------------------------------
MAX_CONCURRENT_JOBS=2
JOB_TIMEOUT_SECONDS=600
TILE_SIZE=256
DEFAULT_PROFILE=laptop
MAX_MEMORY_GB=4

# -----------------------------------------------------------------------------
# Storage Configuration (Local Filesystem)
# -----------------------------------------------------------------------------
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./data/dev
STORAGE_S3_BUCKET=
STORAGE_S3_REGION=

# -----------------------------------------------------------------------------
# Feature Flags (Development)
# -----------------------------------------------------------------------------
ENABLE_DISTRIBUTED=false
ENABLE_GPU=false
ENABLE_ASYNC_PROCESSING=false
ENABLE_QUALITY_CHECKS=true
ENABLE_PROVENANCE_TRACKING=true
ENABLE_WEBHOOKS=false

# -----------------------------------------------------------------------------
# External Services (Development Mocks/Sandboxes)
# -----------------------------------------------------------------------------
STAC_ENDPOINTS=https://earth-search.aws.element84.com/v1
PLANETARY_COMPUTER_API_KEY=
ERA5_API_KEY=
GFS_ENDPOINT=https://nomads.ncep.noaa.gov

# -----------------------------------------------------------------------------
# Security Configuration (Relaxed for Development)
# -----------------------------------------------------------------------------
# Weak secret is fine for local development only
JWT_SECRET_KEY=dev-secret-key-not-for-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=168

# No API key required in development
API_KEY=

# -----------------------------------------------------------------------------
# Monitoring & Telemetry (Development)
# -----------------------------------------------------------------------------
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_TRACING=false
TRACING_ENDPOINT=
SENTRY_DSN=

# -----------------------------------------------------------------------------
# Agent Configuration (Development)
# -----------------------------------------------------------------------------
AGENT_HEARTBEAT_SECONDS=60
AGENT_MAX_RETRIES=1
AGENT_RETRY_DELAY_SECONDS=1

# -----------------------------------------------------------------------------
# Development-Specific Settings
# -----------------------------------------------------------------------------
# Enable hot reload for API
RELOAD=true

# Show SQL queries in logs
SQL_DEBUG=true

# Enable test fixtures
ENABLE_TEST_FIXTURES=true

# Use mock data providers
USE_MOCK_PROVIDERS=true
