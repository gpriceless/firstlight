# FirstLight Environment Configuration
# Copy this file to .env and adjust values for your environment.

# =============================================================================
# Application
# =============================================================================
FIRSTLIGHT_ENVIRONMENT=development
FIRSTLIGHT_DEBUG=true
FIRSTLIGHT_LOG_LEVEL=DEBUG

# =============================================================================
# Authentication (BREAKING: auth is now enabled by default)
# =============================================================================
# Set to false to disable authentication (development only)
AUTH_ENABLED=true
AUTH_SECRET_KEY=change-me-in-production
AUTH_JWT_ENABLED=false
AUTH_ALLOW_ANONYMOUS=false
AUTH_REQUIRE_HTTPS=false

# =============================================================================
# Database
# =============================================================================
POSTGRES_PASSWORD=devpassword
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=first_light
DATABASE_USER=postgres
DATABASE_PASSWORD=devpassword

# =============================================================================
# Redis
# =============================================================================
REDIS_PASSWORD=devredispassword
REDIS_HOST=localhost
REDIS_PORT=6379

# =============================================================================
# Storage
# =============================================================================
STORAGE_BACKEND=local
STORAGE_LOCAL_PATH=./data/products
